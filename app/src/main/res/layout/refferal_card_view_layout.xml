<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        app:cardBackgroundColor="@color/card_color"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/mragintop"
            android:layout_marginTop="@dimen/mragintop"
            android:layout_marginRight="@dimen/mragintop"
            android:layout_marginBottom="@dimen/mragintop">

            <androidx.cardview.widget.CardView
                android:id="@+id/iv_card"
                android:layout_width="80dp"
                android:layout_height="110dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginRight="@dimen/standard_margin"
                android:background="@color/card_color"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:id="@+id/winner_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:fitsSystemWindows="true"
                    android:background="@drawable/logo" />

            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/reffer_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginTop="@dimen/bottom_margin"
                android:layout_toRightOf="@id/iv_card"
                android:text=""
                android:singleLine="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size1"
                android:textStyle="bold" />

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/reffer_code"
                android:padding="5dp"
                android:src="@drawable/check_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />



            <TextView
                android:id="@+id/reffer_code_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reffer_code"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/iv_card"
                android:text="Date :"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size2" />

            <TextView
                android:id="@+id/reffer_applied_code_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reffer_code"
                android:layout_marginLeft="@dimen/bottom_margin"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/reffer_code_time"
                android:text=""
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size2" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reffer_code_time"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginTop="5dp"

                android:layout_toRightOf="@id/iv_card"
                android:text="City :"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size2" />

            <TextView
                android:id="@+id/tv_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_city"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_toRightOf="@id/iv_card"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="Shop: "
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size2" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>