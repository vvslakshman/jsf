<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/standard_margin"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/edit_image_box"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/show_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_image_box"
                    android:scaleType="fitXY"
                    android:src="@drawable/event_banner_ic" />

            </LinearLayout>


            <TextView
                android:id="@+id/txt_music_night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_layout"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size1" />

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/txt_music_night"
                android:layout_marginTop="@dimen/bottom_margin"
                android:background="@color/text_color" />

            <TextView
                android:id="@+id/event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line3"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/bottom_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:text=""
                android:textColor="@color/nav_color"
                android:textSize="@dimen/text_size1" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginBottom="@dimen/double_standard_margin"
        app:cardBackgroundColor="@color/card_color"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/artist_name"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size1" />

            <TextView
                android:id="@+id/name_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_toRightOf="@id/artist_name"
                android:text=""
                android:textColor="@color/nav_color"
                android:textSize="@dimen/text_size1" />

            <TextView
                android:id="@+id/demo_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_artist"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/show_time"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size1" />

            <TextView
                android:id="@+id/real_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_artist"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@id/demo_time"
                android:text=""
                android:textColor="@color/nav_color"
                android:textSize="@dimen/text_size1" />

            <TextView
                android:id="@+id/demo_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/demo_time"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/contact"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size1" />

            <TextView
                android:id="@+id/real_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/real_time"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@id/demo_contact"
                android:text=""
                android:textColor="@color/nav_color"
                android:textSize="@dimen/text_size1" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/demo_contact"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@color/text_color" />

            <TextView
                android:id="@+id/about_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:layout_marginTop="@dimen/mragintop"
                android:text="@string/about_event"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size1" />

            <View
                android:visibility="gone"
                android:id="@+id/line2"
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_below="@id/about_event"
                android:layout_marginTop="@dimen/bottom_margin"
                android:background="@color/text_color" />

            <TextView
                android:id="@+id/music_night_with"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:layout_marginTop="@dimen/bottom_margin"
                android:textColor="@color/nav_color"
                android:textSize="@dimen/text_size2" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>